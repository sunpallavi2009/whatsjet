<IfModule mod_rewrite.c>
    RewriteEngine On
    # Routing through public folder, useful for shared hosting main domains
    # where user is unable to set document root
    RewriteRule ^(.*)$ public/$1 [L]
    # Disable access to .env file
   <Files .env>
        order allow,deny
        Deny from all
    </Files>
</IfModule>

<IfModule mod_php7.c>
    php_value extension_dir "/opt/alt/php82/usr/lib64/php/modules"
    php_value extension pdo.so
    php_value extension pdo_mysql.so
</IfModule>

